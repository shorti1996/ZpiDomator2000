<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="zpi.pls.zpidominator2000.Fragments.OneRoomSettingsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:contentPaddingBottom="8dp"
        app:contentPaddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/one_room_temp_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/one_room_temp_val"
                app:layout_constraintEnd_toStartOf="@+id/spacer_l"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/one_room_temp_val"
                app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />

            <View
                android:id="@+id/spacer_l"
                android:layout_width="8dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/one_room_temp_val"
                app:layout_constraintEnd_toStartOf="@+id/one_room_temp_val"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/one_room_temp_up"
                app:layout_constraintTop_toTopOf="@+id/one_room_temp_val" />

            <TextView
                android:id="@+id/one_room_temp_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="22&#8451;"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintEnd_toStartOf="@+id/spacer_r"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/spacer_l"
                tools:text="22&#8451;" />

            <View
                android:id="@+id/spacer_r"
                android:layout_width="8dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/one_room_temp_val"
                app:layout_constraintEnd_toStartOf="@+id/one_room_temp_down"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/one_room_temp_val"
                app:layout_constraintTop_toTopOf="@+id/one_room_temp_val" />

            <ImageButton
                android:id="@+id/one_room_temp_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/one_room_temp_val"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/spacer_r"
                app:layout_constraintTop_toTopOf="@+id/one_room_temp_val"
                app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <!--</android.support.constraint.ConstraintLayout>-->
</android.support.constraint.ConstraintLayout>
